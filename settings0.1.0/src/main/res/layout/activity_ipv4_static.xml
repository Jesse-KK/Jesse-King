                <EditText
                    android:id="@+id/gateway_3"
                    android:layout_width="@dimen/_85dp"
                    android:layout_height="@dimen/_77dp"
                    android:layout_marginRight="125dp"
                    android:gravity="center"
                    android:background="@drawable/edittext_selector_on"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/gateway_4text"
                    android:nextFocusLeft="@id/gateway_2"
