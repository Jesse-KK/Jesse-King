                    android:textSize="20.0sp" />

                <EditText
                    android:id="@+id/dns_4"
                    android:layout_width="@dimen/_85dp"
                    android:layout_height="@dimen/_77dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:background="@drawable/edittext_selector_on"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:nextFocusLeft="@id/dns_3"
                    android:nextFocusRight="@id/dns"
                    android:nextFocusUp="@id/gateway_4"
                    android:nextFocusDown="@id/dns2_4"></EditText>
