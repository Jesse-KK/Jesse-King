            android:textSize="@dimen/setitem_text_size1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_confirm_reset"
            style="@style/button"
            android:background="@drawable/selector_wifi_item"
            android:text="确定" />

        <Button
            android:id="@+id/button_cancel_reset"
            style="@style/button"
            android:background="@drawable/selector_wifi_item"
            android:layout_marginLeft="30.0dip"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>