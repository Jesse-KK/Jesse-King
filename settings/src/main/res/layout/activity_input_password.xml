<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/settings_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_200dp"
        android:layout_marginTop="@dimen/_31dp"
        android:gravity="center">

        <TextView
            style="@style/SettingPartTitle"
            android:layout_gravity="center"
            android:layout_marginTop="0.0dip"
            android:text="@string/setting_pwd_protect" />
    </LinearLayout>
    <!--    设备信息-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="@dimen/_947dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_254dp"
                android:focusable="false"
                android:padding="10.0dip"
                android:text="@string/delay_time_edit_desc"
                android:textColor="@color/gray"
                android:textSize="@dimen/_36dp" />

            <RelativeLayout
                android:layout_width="@dimen/_550dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="@dimen/_100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="密码"
                    android:textSize="@dimen/_36sp" />

                <EditText
                    android:id="@+id/input_password_protection"
                    android:layout_width="@dimen/_300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_100dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:inputType="number" />

                <Button
                    android:id="@+id/button_display_password"
                    android:layout_width="@dimen/_90dp"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginLeft="280dip"
                    android:background="@drawable/selector_wifi_item"
                    android:text="显示" />

            </RelativeLayout>

            <Button
                android:id="@+id/button_confirm_input_password"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_80dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_100dp"
                android:background="@drawable/selector_wifi_item"
                android:gravity="center"
                android:text="确定" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>