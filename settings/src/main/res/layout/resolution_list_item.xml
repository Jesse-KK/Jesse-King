<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radiolayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/_120dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mode_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_30sp">

    </TextView>

    <LinearLayout
        android:id="@+id/resolution_check"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_125dp"
        android:layout_gravity="right"
        android:gravity="right">

        <com.changhong.settings.Image_Sound.CheckableImageView
            android:id="@+id/image_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_50dp"
            android:clickable="false"
            android:src="@drawable/selector_check_button" />
    </LinearLayout>


</LinearLayout>
